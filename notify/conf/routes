# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /notify                     controllers.Application.getNotify
POST    /notify                     controllers.Application.postNotify
GET     /notification/:id           controllers.Application.getNotification(id: Long)
POST    /notification/:id           controllers.Application.postNotification(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)